<div class="page-wrapper">
  <h1>Your Bookings</h1>
  <ul>
    <% @user_bookings.each do |booking| %>
      <li><%= booking.tool.name %> - <%= booking.date_begin %> <%= booking.date_end %> - <%= booking.total_price %> EUR
       - <%= booking.status %> <%= link_to "View", booking_path(booking) %></li>
    <% end %>
  </ul>

  <h1>Bookings for Your Tools</h1>
  <ul>
    <% @owner_bookings.each do |booking| %>
      <li><%= booking.tool.name %> - <%= booking.date_begin %> <%= booking.date_end %> - <%= booking.total_price %> EUR
      - <%= booking.status %> <%= link_to "View", booking_path(booking) %></li>
    <% end %>
  </ul>

</div>
