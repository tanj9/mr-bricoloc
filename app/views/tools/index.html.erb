<div class="page-wrapper">
  <div class="title pt-3 pb-3 mx-auto text-center">
    <h1>Which tool do you need?</h1>
  </div>
  <div class="cards-container">
      <% @tools.each do |tool| %>
            <%= link_to tool_path(tool) do %>
              <div class="card-trip">
                <%= cl_image_tag tool.photo.key %>
                <div class="card-trip-infos">
                  <div>
                    <h2><%= tool.name %></h2>
                    <p><%= tool.description %></p>
                  </div>
                <h2 class="card-trip-pricing"><%= tool.daily_price %> â‚¬</h2>
                <%= cl_image_tag(tool.user.photo.key, :class => "card-trip-user avatar-bordered") %>
                </div>
              </div>
            <% end %>
      <% end %>
  </div>
</div>

