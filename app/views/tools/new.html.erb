<div class="page-wrapper">
  <div class="form-new">
    <h1>Want to add a new tool to your toolbox?</h1>
    <%= simple_form_for @tool do |f| %>
    <div class="row">
      <div class="col-6"><%= f.input :name %></div>
      <div class="col-6"><%= f.input :category, collection: Tool::CATEGORIES.keys %></div>
      <div class="col-12"><%= f.input :description %></div>
      <div class="col-6"><%= f.input :daily_price %></div>
      <div class="col-6"><%= f.input :condition %></div>
      <div class="col-12"><%= f.input :photo, as: :file %></div>
    </div>
      <%= f.submit "Submit", class: "btn btn-ghost" %><%= link_to "Cancel", bookings_path, class: "cancel-link"%>
    <% end %>
  </div>
</div>
